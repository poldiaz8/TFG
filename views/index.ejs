<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>TFG</title>
  <link rel="stylesheet" href="css/styles.css">
  <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
  <script type="text/javascript">
    function showContent() {
      element = document.getElementById("content");
      check = document.getElementById("check");
      if (check.checked) {
        element.style.display = 'block';
      } else {
        element.style.display = 'none';
      }
    }
  </script>
  </script>
</head>

<body>
  <header class="header-content">
    <div class="wrapper">
      <form class="form" action="placeholder" method="GET" id="visualizar-modelo">
        <div class="pageTitle title">Visualizar Modelo</div>
        <div>
          <input class="name formEntry" type="number" name="codigo1" id="codigo1" placeholder="Inserta tu codigo aquí"
            required>
        </div>
        <div class="button">
          <input type="submit" class="submit formEntry" value="Ir al Modelo">
        </div>
      </form>
      <form class="form2" action="/index" method="POST" id="agregar-modelo" enctype="multipart/form-data">
        <div class="pageTitle title">Registrar un modelo</div>
        <% if(typeof auxError !== 'undefined' && auxError === '1') { %>
        <div class="alert alert-danger">
          Error: Código ya existente
        </div>
        <% }else if(typeof auxError !== 'undefined' && auxError === '0'){ %>
        <div class="alert alert-success">
          Modelo registrado correctamente
        </div>
        <% } %>
        <div class="form-group">
          <input class="name formEntry" type="number" name="codigo" id="codigo" placeholder="Inserta tu codigo aquí"
            required>
        </div>
        <div class="form-group">
          <input class="archivo" type="file" name="url" id="url" placeholder="Importar modelo" required>
        </div>
        <button type="submit" class="submit formEntry">
          Añadir Modelo
        </button>
        <b>Modelos de ejemplo con interacción?</b>
        <input type="checkbox" name="check" id="check" value="1" onchange="javascript:showContent()" />
      </form>
      <div id="content" style="display: none;">
      </div>

    </div>
    </div>

  </header>
</body>
<script>
  document.getElementById('visualizar-modelo').addEventListener('submit', function (s) {
    s.preventDefault; //para q no se quede en la misma pagina
    const codigo = document.getElementById('codigo1').value;
    this.action = '/modelo/' + codigo;
    this.submit();
  });
</script>

</html>