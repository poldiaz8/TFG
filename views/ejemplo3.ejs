<!DOCTYPE html>
<html>
<head>
  <title>Ejemplo 3</title>
  <script src="https://aframe.io/releases/0.8.2/aframe.min.js"></script>
  <script src="//cdn.rawgit.com/donmccurdy/aframe-extras/v4.1.2/dist/aframe-extras.min.js"></script>
</head>
<script>
  
  AFRAME.registerComponent('animar', {
      schema: {
        take: {default: '*'}
      },
  
      init: function () {
        var data = this.data;
        var el = this.el;  
        
        el.addEventListener('raycaster-intersected', function () {
          el.setAttribute('animation-mixer', {
            clip:  data.take,
            loop: 'once'
          });
          
        });
  
        el.addEventListener('animation-finished', function () {
          el.removeAttribute('animation-mixer');
        });
        
      }
    });
    
  </script>
<body>
  <a-scene anti-alias>
    <a-assets>
        <a-asset-item id="escena" src="/modelos/ejemplos/ejemplo1/scene.gltf"></a-asset-item>
    </a-assets>

  <a-entity gltf-model="#escena" scale="0.05 0.05 0.05" animar="take: Default Take"></a-entity>
  <a-sky color="#ECECEC"></a-sky>
  <a-entity id="rig" movement-controls position="0 25 200">
    <a-entity camera
    position="0 1.6 0"
    look-controls="pointerLockEnabled: true">
    </a-entity>
    <a-entity laser-controls="hand: right"></a-entity>
  </a-entity>
  </a-scene>
</body>

</html>
